<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <!-- =========================
         Permissions (권한 선언)
         - camera 플러그인 + ML Kit 얼굴인식은 카메라 권한이 필수
         - 런타임 권한(permission_handler)로도 요청하지만,
           Manifest에 선언이 없으면 OS 레벨에서 권한 자체가 없음
         ========================= -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- =========================
         Hardware feature (기기 기능 선언)
         - PlayStore/기기 필터링 기준이 됨
         - required="false": 카메라 없는 기기에서도 설치는 가능(권장)
         - required="true": 카메라 없는 기기는 설치 자체가 막힘(보통 불필요)
         ========================= -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:label="@string/app_name"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- ✅ Google Maps API Key (필수) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_HERE" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Flutter가 UI 로딩 중 사용할 테마 -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Flutter 플러그인 등록/임베딩 버전 -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- =========================
         Package visibility (Android 11+)
         - 텍스트 처리 인텐트 조회 허용 (Flutter 엔진 플러그인)
         - 카메라 권한이랑은 무관
         ========================= -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>

</manifest>
